@page
@model TrackFit.Pages.Exercises.IndexModel

@{
    ViewData["Title"] = "Exercises";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Exercises</h1>
        <a asp-page="Create" class="btn btn-primary">Create New Exercise</a>
    </div>

    <table class="table table-striped table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Type of Exercise</th>
                <th>Sets</th>
                <th>Reps</th>
                <th>Weight</th>
                <th>Notes</th>
                <th>Workout</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Exercise)
        {
            <tr>
                <td>@item.ExerciseName</td>
                <td>@item.Sets</td>
                <td>@item.Reps</td>
                <td>@item.Weight</td>
                <td>@item.ExerciseNotes</td>

                <!-- NULL-SAFE FIX -->
                <td>@(item.Workout?.WorkoutType ?? "â€”")</td>

                <td class="text-nowrap">
                    <a asp-page="./Edit" asp-route-id="@item.ExerciseId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ExerciseId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ExerciseId">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
