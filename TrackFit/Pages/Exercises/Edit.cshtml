            </div>
            <div class="form-group">
                
                <label asp-for="Exercise.Sets" class="control-label"></label>
                <input asp-for="Exercise.Sets" class="form-control" />
                <span asp-validation-for="Exercise.Sets" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Exercise.Reps" class="control-label"></label>
                <input asp-for="Exercise.Reps" class="form-control" />
                <span asp-validation-for="Exercise.Reps" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Exercise.Weight" class="control-label"></label>
                <input asp-for="Exercise.Weight" class="form-control" />
                <span asp-validation-for="Exercise.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Exercise.ExerciseNotes" class="control-label"></label>
                <input asp-for="Exercise.ExerciseNotes" class="form-control" />
                <span asp-validation-for="Exercise.ExerciseNotes" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Exercise.WorkoutId" class="control-label"></label>
                <select asp-for="Exercise.WorkoutId" class="form-control" asp-items="ViewBag.WorkoutId"></select>
                <span asp-validation-for="Exercise.WorkoutId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
